<div class="container-fluid" style="padding: 0; margin-top: 200px;">
    <div class="row">

        <form class="col-md-4 col-md-offset-4" id="form" method="post" action="api/song">

            <div class="form-group">
                <label for="artist"><b>Artist:</b></label>
                <input type="text" class="form-control" style="max-width: 100%" id="artist" name="artist" placeholder="Song artist">
            </div>

            <div class="form-group">
                <label for="title"><b>Title:</b></label>
                <input type="text" class="form-control" style="max-width: 100%" id="title" name="title" placeholder="Song title">
            </div>

            <div class="form-group">
                <label for="tabs"><b>Tabs:</b></label>
                <textarea class="form-control" placeholder="Paste tabs here.." style="max-width: 100%" id="tabs" name="tabs" rows="3"></textarea>
            </div>

            <div class="form-group text-center">
                <div class="form-check form-check-inline" style="display: inline-block; padding-right: 10px;">
                    <input class="form-check-input" type="radio" name="difficulty" id="easy" value="1">
                    <label class="form-check-label" for="easy">Easy</label>
                </div>
                <div class="form-check form-check-inline" style="display: inline-block; padding-right: 10px;">
                    <input class="form-check-input" type="radio" name="difficulty" id="medium" value="2">
                    <label class="form-check-label" for="medium">Medium</label>
                </div>
                <div class="form-check form-check-inline" style="display: inline-block; padding-right: 10px;">
                    <input class="form-check-input" type="radio" name="difficulty" id="hard" value="3">
                    <label class="form-check-label" for="hard">Hard</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary text-center" style="width: 100%">Submit</button>
        </form>
    </div>
</div>


