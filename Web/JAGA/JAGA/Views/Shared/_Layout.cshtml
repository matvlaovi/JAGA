<!DOCTYPE html>
<html style="height: 100%">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Just Another Guitar App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding: 0; height: 100%; background-color: #fbfbff;">
    <nav class="navbar navbar-inverse bg-inverse" style="border-radius: 0; background-color: #0b4577;">
        <span class="navbar-brand">JAGA</span>
    </nav>


    <div class="container-fluid body-content">
        @RenderBody()
        
        <footer style="position: absolute; bottom: 0; width: 98%">
            <hr />
            <p>&copy; @DateTime.Now.Year - Matej Vlaović</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
