<audio>
    <source src="~/Content/songs/01%20-%20Seven%20Nation%20Army.mp3" type="audio/mpeg" />
</audio>

<div class="background-image-container">
    <img id="guitar" src="~/Content/guitar_dean.png" class="background-image"/>
</div>


<div style="padding-top: 10px;">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            <strong>Well done!</strong>  @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
            {
        <div class="alert alert-danger text-center">
            <strong>Error!</strong> @TempData["ErrorMessage"]
        </div>
    }

</div>


<div class="container-fluid" style="padding: 0; margin-top: 150px; font-family: 'Montserrat', sans-serif;">
    <div class="row">      
        <form class="col-md-4 col-md-offset-4" id="form" method="post" action="@Url.Action("InsertSong", "Home")">

            <div class="form-group">
                <label for="artist">ARTIST</label>
                <input type="text" class="form-control" style="max-width: 100%" id="artist" name="artist" placeholder="Song artist">
            </div>

            <div class="form-group">
                <label for="title">TITLE</label>
                <input type="text" class="form-control" style="max-width: 100%" id="title" name="title" placeholder="Song title">
            </div>

            <div class="form-group">
                <label for="tabs">TABS</label>
                <textarea class="form-control" placeholder="Paste tabs here.." style="max-width: 100%" id="tabs" name="tabs" rows="3"></textarea>
            </div>

            <div class="form-group text-center">
                <div class="form-check form-check-inline" style="display: inline-block; padding-right: 10px;">
                    <input class="form-check-input" type="radio" name="difficulty" id="easy" value="1">
                    <label class="form-check-label" for="easy">EASY</label>
                </div>
                <div class="form-check form-check-inline" style="display: inline-block; padding-right: 10px;">
                    <input class="form-check-input" type="radio" name="difficulty" id="medium" value="2">
                    <label class="form-check-label" for="medium">MEDIUM</label>
                </div>
                <div class="form-check form-check-inline" style="display: inline-block; padding-right: 10px;">
                    <input class="form-check-input" type="radio" name="difficulty" id="hard" value="3">
                    <label class="form-check-label" for="hard">HARD</label>
                </div>
            </div>

            <button type="submit" class="btn bnt-primary text-center nav-background submit-btn" style="width: 100%;">ADD A NEW SONG</button>                        
        </form>
    </div>
</div>


<script>
    var audio = document.getElementsByTagName("audio")[0];
    $("#guitar").mouseenter(function () {
      audio.currentTime = 45;
      audio.play();
    });

    $("#guitar").mouseleave(function () {
        audio.pause();
        audio.currentTime = 45;
    });
</script>