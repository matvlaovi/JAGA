<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vlaovic.matej.jaga">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_guitar_pick"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_guitar_pick_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".tuner.TunerActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".preferences.PreferencesActivity" />
        <activity
            android:name=".songList.SongListActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".songChords.ChordsActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>