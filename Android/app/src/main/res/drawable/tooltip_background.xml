<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:height="4dp"
                android:color="@color/colorAccent" />
            <solid android:color="@color/colorWhiteBackground" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp"
            android:bottom="6dp" />

            <corners android:radius="5dp" android:bottomRightRadius="5dp"
                android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>
</layer-list>